<!DOCTYPE html>
<html>
  <head>
    <title>MovingMusic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="flash">
         <% if flash && flash.any?  %>
           <% flash.each do |key, message| %>
             <div class="">
               <% if message && message.class != String && message.any?  %>
                 <% message.each do |sub_message|  %>
                   <h5><%= sub_message %></h5>
                 <% end  %>
               <% else  %>
                 <h5><%= message %></h5>
               <% end  %>
             </div>
           <% end %>
         <% end  %>
       </div>
      <%= link_to 'Home', users_path %>
      <% if current_user %>
        <div class="user-info">
          <p>Logged in as: <%= current_user.email %> </p>
          <p><%= link_to "Sign Out", logout_path, method: :delete %></p>
        </div>
      <% else %>
        <div class="register">
          <%= link_to "Register / Sign Up", new_user_path %>
        </div>
        <div class="log-in">
          <%= link_to "Log In", new_session_path%>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>

