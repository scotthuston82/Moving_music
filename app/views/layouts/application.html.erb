<!DOCTYPE html>
<html>
  <head>
    <title>MovingMusic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if flash[:alert] %>
        <ul>
          <% flash[:alert].each do |alert| %>
            <li><%= alert %></li>
          <% end %>
        </ul>
      <% end %>
      <%= link_to 'Home', users_path %>
      <% if current_user %>
        <div class="user-info">
          <p>Logged in as: <%= current_user.email %> </p>
          <p><%= link_to "Sign Out", logout_path, method: :delete %></p>
        </div>
      <% else %>
        <div class="register">
          <%= link_to "Register / Sign Up", new_user_path %>
        </div>
        <div class="log-in">
          <%= link_to "Log In", new_session_path%>
        </div>
      <% end %>
      <div class = "search">
          <%= form_tag(users_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :term, params[:term], placeholder: "Search" %>
            <%= submit_tag "Search", name: nil %>
          <% end %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
