<section class='login'>
  <div class='login-container'>
    <h1>Log In</h1>

    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </p>

      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>

      <%= submit_tag "Log In", class: 'btn' %>
    <% end %>
  </div>
</section>
