<h2>Please provide/update your profile information</h2>

<%= form_for user do |f| %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.label :profile_picture %>
    <%= f.text_field :profile_picture %>
  </p>


  <%= f.submit 'Update' %>

<% end %>
