<section class='user-show clearfix'>

  <div class="client-picture">
    <%= image_tag(@user.profile_picture) %>
  </div>

  <div class='client-info'>
    <h2 class='client-name'> <%= @user.first_name %> <%= @user.last_name %></h2>
    <% if current_user %>
      <p><%= @user.email %></p>
    <% end %>
    <% if @user.bio %>
      <h2>Biography</h2>
      <p><%= @user.bio %></p>
    <% end %>

  </div>
  <div class="client-buttons">
    <% if current_user && current_user.id == @user.id %>
      <div class='edit-profile'>
        <%= link_to 'Edit Profile', edit_user_path(@user)%>
      </div>
      <div class='updatepassword'>
        <%= link_to 'Update Password', users_updatepassword_path%>
      </div>
  </div>  
  <div class = 'bookings'>
    <h2>My Pending Bookings:</h2>
    <div id="pending_bookings">
      <% @pendingbookings.each do |booking| %>
        <ul id="booking_<%= booking.id %>">
          <li>Artist: <%= booking.musician.stage_name %></li>
          <li>Artist Contact Name: <%= booking.musician.first_name %> <%= booking.musician.last_name %></li>
          <li>Artist Contact email: <%= booking.musician.email %></li>
          <li>Event Address: <%= booking.address %></li>
          <li>Start Time: <%= booking.start_time %></li>
          <li>End Time: <%= booking.end_time %></li>
          <li>Age Range: <%= booking.age_range %></li>
          <li>Party Size: <%= booking.party_size %></li>
        </ul>

        <% end %>
  </div>
    <h2>My Confirmed Bookings:</h2>
    <div id="confirmed_bookings">
      <% @confirmedbookings.each do |booking| %>
        <ul id="booking_<%= booking.id %>">
          <li>Artist: <%= booking.musician.stage_name %></li>
          <li>Artist Contact Name: <%= booking.musician.first_name %> <%= booking.musician.last_name %></li>
          <li>Artist Contact email: <%= booking.musician.email %></li>
          <li>Event Address: <%= booking.address %></li>
          <li>Start Time: <%= booking.start_time %></li>
          <li>End Time: <%= booking.end_time %></li>
          <li>Age Range: <%= booking.age_range %></li>
          <li>Party Size: <%= booking.party_size %></li>
        </ul>
      <% end %>
    </div>
    <h2>My Past Bookings:</h2>
    <div id="past_bookings">
      <% @pastbookings.each do |booking| %>
        <ul id="booking_<%= booking.id %>">
          <li>Artist: <%= booking.musician.stage_name %></li>
          <li>Artist Contact Name: <%= booking.musician.first_name %> <%= booking.musician.last_name %></li>
          <li>Artist Contact email: <%= booking.musician.email %></li>
          <li>Event Address: <%= booking.address %></li>
          <li>Start Time: <%= booking.start_time %></li>
          <li>End Time: <%= booking.end_time %></li>
          <li>Age Range: <%= booking.age_range %></li>
          <li>Party Size: <%= booking.party_size %></li>
        </ul>
    <% end %>

    <% end %>
    <%= render 'bookings.js' %>
  </div>
</div>
  <% if !current_user %>
    <p> Please log in to view contact information. </p>
  <% end %>
</section>
