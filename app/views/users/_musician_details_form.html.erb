<section class='signup-form'>
  <% if user.bio && user.hourly_rate_in_cents %>
    <h2>Update My Profile</h2>
  <% else %>
    <h2>Please provide details for your profile</h2>
  <% end %>

  <%= form_for user do |f| %>
    <p>
      <%= f.label "Your Band/DJ Name" %>
      <%= f.text_field :stage_name %>
    </p>

    <p>
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </p>

    <p>
      <%= f.label :profile_picture %>
      <%= f.text_field :profile_picture %>
    </p>

    <p>
      <%= f.label :hourly_rate %>
      <%= f.text_field :hourly_rate %>
    </p>

    <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>

    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= field_set_tag 'Genres' do %>
      <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
      <% end %>
    </p>

    <h3>Update Password:</h3>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </p>

    <%= f.submit 'Update' %>

  <% end %>
</section>  
