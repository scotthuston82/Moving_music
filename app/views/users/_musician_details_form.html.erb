<section class='signup-form'>
  <div class='form-wrapper'>
    <h2>Update My Profile</h2>

  <%= form_for(user, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>
    <p>
      <%= f.label "Your Band/DJ Name" %>
      <%= f.text_field :stage_name %>
    </p>

    <p>
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </p>

    <p>
      <% if @user.profile_picture %>
        <%= image_tag(@user.profile_picture) %>
      <% end %>
      <%= f.label :profile_picture %>
      <%= f.file_field :profile_picture, placeholder: "Upload a profile picture" %>
    </p>

    <p>
      <%= f.label :hourly_rate %>
      <%= f.text_field :hourly_rate %>
    </p>

    <div class='genres'>
      <%= field_set_tag 'Genres' do %>
      <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
      <% end %>
    </div>

    <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>

    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>


    <%= f.submit 'Update', class: 'btn' %>

  <% end %>
  </div>
</section>
