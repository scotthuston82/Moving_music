<h1>User Profile</h1>
<%= link_to 'Edit Profile', edit_user_path(@user) %>


  <ul>
    <li><%= @user.first_name %> <%= @user.last_name %></li>
    <% if current_user %>
      <li><%= @user.email %></li>
    <% end %>
    <li><%= @user.profile_picture %></li>
    <li><%= @user.bio %></li>
    <li><%= @user.hourly_rate_in_cents %></li>
  </ul>
