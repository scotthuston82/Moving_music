<%= form_for @user do |f| %>

<h2>Update Password</h2>
<p>
<%= f.label :password  %>
<%= f.password_field :password %>
</p>
<p>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
</p>
<div class='update-password'>
  <%= f.submit 'Update Password' %>
</div>
<% end %>
